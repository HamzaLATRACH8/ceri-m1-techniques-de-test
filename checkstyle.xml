<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Module TreeWalker pour les règles de formatage -->
    <module name="TreeWalker">
        <module name="WhitespaceAfter"/>
        <module name="WhitespaceAround"/>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="tabWidth" value="4"/>
        </module>
    </module>

    <!-- Module LineLength à l'extérieur de TreeWalker -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package.*|^import.*"/>
    </module>

    <!-- Autres modules utiles -->
    <module name="JavadocMethod">
        <property name="scope" value="public"/>
    </module>

    <module name="JavadocPackage">
        <property name="scope" value="package"/>
    </module>

    <module name="FileTabCharacter"/>
    <module name="TodoComment"/>
</module>
